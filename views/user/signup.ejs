<%- layout("./bolierPlate/boilerplate.ejs") -%>

<body>
    <div class="row mat-3">
        <h1 class="col-8 mb-4" style="text-align: center;" >SingUp for Wonerlust</h1>
        <div class="col-md-6 col-10 offset-md-0">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username">Enter Username</label>
                    <input name="username" type="text" class="form-control w-100 mb-3" placeholder="enter username" required></input>
                    <div class="invalid-feedback">Username is required</div>
                </div>
                <div class="mb-3">
                    <label for="email">Enter Email</label>
                    <input name="email" type="email" class="form-control w-100 mb-3" placeholder="enter email" required></input>
                    <div class="invalid-feedback">Email is required</div>
                </div>
                <div class="mb-3">
                    <label for="password">Enter Password</label>
                    <input name="password" type="password" class="form-control w-100 mb-3" placeholder="enter password" required></input>
                    <div class="invalid-feedback">Password is required</div>
                </div>
                <div class="mb-3">
                    <div>Already have an account? <a class="text-decoration-none" href="/login">Login</a></div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary" style="margin-top:15px; background-color: #fe424d; border:none">SingUp</button>
                </div>
            </form>
        </div>
    </div>
    <script src="/js/validator_logic.js"></script>
</body>
</html>