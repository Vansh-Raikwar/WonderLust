<%- layout("./bolierPlate/boilerplate.ejs") -%>
<body>
    <div class="row mat-3">
        <h1 class="col-8 mb-4" style="text-align: center;" >Change Username</h1>
        <div class="col-md-6 col-10 offset-md-0">
            <form action="/change-username" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="new_username">Enter New Username</label>
                    <input name="new_username" type="text" class="form-control w-100 mb-3" placeholder="Enter new username" required></input>
                    <div class="invalid-feedback">Username is required</div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary" style="margin-top:15px; background-color: #fe424d; border:none">Change Username</button>
                </div>
            </form>
        </div>
    </div>
    <script src="/js/validator_logic.js"></script>
</body>
</html> 